@model IEnumerable<SISASEPBA.Models.ControlVacacional>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <strong>Catálogo vacaciones</strong>
    </div>
    <div class="panel panel-body">

        <p>
            @Html.ActionLink("Nuevo cálculo", "Create")
        </p>

        <div class = "table-responsive">

            <table class="table table-striped table-bordered" id="tablaVacaciones">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Alias)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiasAcuMes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiasRestados)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IncluirSabados)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IncluirDomingos)
                    </th>
                    <th>
                        Acción
                    </th>
                </tr>

                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alias)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiasAcuMes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiasRestados)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IncluirSabados)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IncluirDomingos)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
                    }

            </table>

        </div>

    </div>
</div>

